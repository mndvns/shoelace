section.accordion
  border 1px solid #ccc
  margin-bottom PAD_SMALL
  user-select none

  header
    display flex
    justify-content space-between
    align-items center
    label.title
      cursor pointer
    > :first-child
      padding-left PAD_SMALL * 2
    > :last-child
      margin-right PAD_SMALL

  label.title
  span.name
    flex 1
    padding-top PAD_SMALL
    padding-bottom PAD_SMALL

  ul
    _speed = .3s
    padding 0 PAD_SMALL
    transition-duration _speed
    transition-property all
    border-top-width 0px
    border-top-style solid
    border-top-color #ccc
    li
      display flex
      justify-content space-between
      align-items center
      overflow hidden
      max-height 0
      opacity 0
      transition-duration _speed
      transition-property all
      border-width 0px
      border-style solid
      border-color #eee
      margin 0
      margin-bottom 0
      span.name
        padding-bottom 0
        padding PAD_SMALL

  input:checked ~
    article.accordion-content
      ul
        border-top-width 1px
        padding PAD_SMALL
        li
          max-height 30px
          opacity 1
          margin-bottom PAD_SMALL
          border-width 1px
          &:last-child
            margin-bottom 0
          span.name
            padding-bottom PAD_SMALL


