
el-html()
  font-family FONT_FAMILY_MAIN
  font-size FONT_SIZE_MAIN
  color FONT_COLOR_NORMAL

el-body()
  display flex
  min-height 100vh
  flex-direction column
  margin 0
  &.heroku-boomerang-loaded
    padding-top 32px

el-a()
  color FONT_COLOR_NORMAL
  text-decoration none
  &:visited
  &:active
    color FONT_COLOR_NORMAL
    text-decoration none
  &:hover
    color FONT_COLOR_HIGHLIGHT

flex-row-space()
  display flex
  flex-direction row
  justify-content space-between
  align-items center


